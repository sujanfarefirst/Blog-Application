<h1>
    <%= data.title %>
</h1>
<article class="article">
    <%= data.body %>
</article>

<a href="/edit-post/<%= data._id %>">Edit</a>

<form action="/delete-post/<%= data._id %>" method="POST" style="display:inline;">
  <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
</form>
